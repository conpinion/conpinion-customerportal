<div class="col-md-6 col-md-offset-3">
  <div class="well">
    <p>
      <strong><%= t('activerecord.attributes.license_pool.distributor') %>:</strong>
      <%= @license_pool.distributor.company %>
    </p>
    <p>
      <strong><%= t('activerecord.attributes.license_pool.product') %>:</strong>
      <%= @license_pool.product.display_name %>
    </p>
    <p>
      <strong><%= t('activerecord.attributes.license_pool.feature_name') %>:</strong>
      <%= @license_pool.feature_name.gsub(/[_.]/, ' ').titleize %>
    </p>
    <p>
      <strong><%= t('activerecord.attributes.license_pool.feature_stock') %>:</strong>
      <%= @license_pool.feature_stock %>
    </p>
  </div>

  <div>
    <% if can? :manage, @license_pool %>
      <%= link_to t('actions.edit'), edit_license_pool_path(@license_pool), class: 'btn btn-primary' %>
    <% end %>
    <%= link_to_back %>
  </div>
</div>
