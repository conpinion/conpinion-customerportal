<div class="col-md-6 col-md-offset-3">
  <div class="well">
    <p>
      <strong><%= t('activerecord.attributes.product.name') %>:</strong>
      <%= @product.name %>
    </p>
    <p>
      <strong><%= t('activerecord.attributes.product.version') %>:</strong>
      <%= @product.version %>
    </p>
    <p>
      <strong><%= t 'activerecord.attributes.product.features' %>:</strong>
      <pre class="file-contents"><%= JSON.pretty_generate @product.features %></pre>
    </p>
  </div>

  <div>
    <% if can? :manage, @product %>
      <%= link_to t('actions.edit'), edit_product_path(@product), class: 'btn btn-primary' %>
    <% end %>
    <%= link_to_back %>
  </div>
</div>
