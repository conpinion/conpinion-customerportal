<div class="row">
  <div class="col-md-4 col-md-offset-4">
    <h2>
      <%= t 'views.users.edit_your_email' if @user == current_user %>
      <%= t 'views.users.edit_email' unless @user == current_user %>
    </h2>

    <%= semantic_form_for @user, validate: true do |f| %>
      <%= f.semantic_errors %>
      <% if @user == current_user %>
        <%= f.input :current_password, input_html: { autofocus: true } %>
      <% end %>
      <%= f.input :new_email, input_html: { autofocus: !current_user.has_role?(:admin)} %>
      <% if @user == current_user %>
        <%= t 'views.users.edit_your_email_description' %>
      <% end %>
      <%= f.actions do %>
        <%= f.action :submit, label: t('views.users.update_email'), button_html: { class: 'btn btn-primary' } %>
        <%= link_to_back t('actions.cancel') %>
      <% end %>
    <% end %>
  </div>
</div>
